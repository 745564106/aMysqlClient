<com.piglet.widget.ResizeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <HorizontalScrollView
        android:id="@+id/hint_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scrollbars="none"
        android:visibility="visible" >

        <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:id="@+id/help_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectbg"
                android:gravity="center"
                android:minWidth="20dp"
                android:padding="3dp"
                android:text="@string/help_text" />

            <TextView
                android:id="@+id/star_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectbg"
                android:gravity="center"
                android:minWidth="20dp"
                android:padding="3dp"
                android:text="*" />

            <TextView
                android:id="@+id/percent_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectbg"
                android:gravity="center"
                android:minWidth="20dp"
                android:padding="3dp"
                android:text="%" />

            <TextView
                android:id="@+id/and_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectbg"
                android:gravity="center"
                android:minWidth="20dp"
                android:padding="3dp"
                android:text="&amp;" />

            <TextView
                android:id="@+id/or_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectbg"
                android:gravity="center"
                android:minWidth="20dp"
                android:padding="3dp"
                android:text="|" />

            <TextView
                android:id="@+id/equal_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectbg"
                android:gravity="center"
                android:minWidth="20dp"
                android:padding="3dp"
                android:text="=" />

            <TextView
                android:id="@+id/plus_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectbg"
                android:gravity="center"
                android:minWidth="20dp"
                android:padding="3dp"
                android:text="+" />

            <TextView
                android:id="@+id/minus_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectbg"
                android:gravity="center"
                android:minWidth="20dp"
                android:padding="3dp"
                android:text="-" />

            <TextView
                android:id="@+id/gt_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectbg"
                android:gravity="center"
                android:minWidth="20dp"
                android:padding="3dp"
                android:text=">" />

            <TextView
                android:id="@+id/gte_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectbg"
                android:gravity="center"
                android:minWidth="20dp"
                android:padding="3dp"
                android:text=">=" />

            <TextView
                android:id="@+id/lt_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectbg"
                android:gravity="center"
                android:minWidth="20dp"
                android:padding="3dp"
                android:text="&lt;" />

            <TextView
                android:id="@+id/lte_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectbg"
                android:gravity="center"
                android:minWidth="20dp"
                android:padding="3dp"
                android:text="&lt;=" />

            <TextView
                android:id="@+id/ne_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectbg"
                android:gravity="center"
                android:minWidth="20dp"
                android:padding="3dp"
                android:text="&lt;>" />

            <TextView
                android:id="@+id/select_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectbg"
                android:padding="3dp"
                android:text="@string/select_text" />

            <TextView
                android:id="@+id/insert_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectbg"
                android:padding="3dp"
                android:text="@string/insert_text" />

            <TextView
                android:id="@+id/update_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectbg"
                android:padding="3dp"
                android:text="@string/update_text" />

            <TextView
                android:id="@+id/show_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectbg"
                android:padding="3dp"
                android:text="@string/show_text" />

            <TextView
                android:id="@+id/use_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectbg"
                android:padding="3dp"
                android:text="@string/show_text" />

            <TextView
                android:id="@+id/create_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectbg"
                android:padding="3dp"
                android:text="@string/create_text" />

            <TextView
                android:id="@+id/delete_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectbg"
                android:padding="3dp"
                android:text="@string/delete_text" />

            <TextView
                android:id="@+id/from_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectbg"
                android:padding="3dp"
                android:text="@string/from_text" />

            <TextView
                android:id="@+id/where_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectbg"
                android:padding="3dp"
                android:text="@string/where_text" />

            <TextView
                android:id="@+id/order_by_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectbg"
                android:padding="3dp"
                android:text="@string/order_by_text" />

            <TextView
                android:id="@+id/limit_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectbg"
                android:padding="3dp"
                android:text="@string/limit_text" />

            <TextView
                android:id="@+id/offset_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectbg"
                android:padding="3dp"
                android:text="@string/offset_text" />

            <TextView
                android:id="@+id/between_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/rectbg"
                android:padding="3dp"
                android:text="@string/between_text" />
        </LinearLayout>
    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/hint_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <ProgressBar
            android:id="@+id/progressbar"
            style="@android:style/Widget.ProgressBar.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <RelativeLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" >

            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="@string/query_hint" />

            <TextView
                android:id="@+id/text"
                style="@style/base_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/status"
                android:text="@string/cmd" />

            <MultiAutoCompleteTextView
                android:id="@+id/cmdline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/status"
                android:layout_toRightOf="@id/text"
                android:background="@null"
                android:hint="@string/query_hint"
                android:imeOptions="actionGo"
                android:inputType="text" />
        </RelativeLayout>

        <TextView
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_above="@id/head"
            android:layout_margin="1dp"
            android:background="#000" />

        <TextView
            android:id="@+id/tips"
            style="@style/base_text_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <com.piglet.widget.TwoDScrollView
            android:id="@+id/tds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/divider"
            android:layout_below="@id/tips"
            android:drawingCacheQuality="low" >

            <LinearLayout
                android:id="@+id/table_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>
        </com.piglet.widget.TwoDScrollView>
    </RelativeLayout>

</com.piglet.widget.ResizeLayout>